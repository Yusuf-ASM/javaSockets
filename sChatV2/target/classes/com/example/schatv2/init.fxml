<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ProgressBar?>
<BorderPane xmlns:fx="borderPane" fx:controller="com.example.schatv2.initController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <CheckBox fx:id="checkBox" text=" Server " onAction="#checked"/>
            <TextField fx:id="name" promptText="Your Name" maxWidth="200"/>
            <TextField fx:id="ip" promptText="Server IP" disable="true" maxWidth="200"/>
            <Button fx:id="done" text="let's chat" onAction="#done"/>
            <ProgressBar fx:id="bar" visible="false"/>
            <Text fx:id="error" text="errrrrrrrrrrrror" visible="false" fill="red"/>
        </VBox>

    </center>

</BorderPane>
